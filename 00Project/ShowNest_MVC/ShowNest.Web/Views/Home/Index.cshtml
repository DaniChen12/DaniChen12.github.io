@model IEnumerable<EventCardViewModel>

@{
    ViewData["Title"] = "Home";
}

@section topCSS {
    <link rel="stylesheet" href="~/css/Index/home_style.css">
    <link rel="stylesheet" href="~/css/_Partial/_EventCards_Partial.css">
}

<!-- event-slides -->
<section>
    <div id="event-slides" class="carousel slide">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#event-slides" data-bs-slide-to="0" class="active" aria-current="true"
                aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#event-slides" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#event-slides" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://picsum.photos/800/180/?random=1" class="" alt="...">
            </div>
            <div class="carousel-item">
                <img src="https://picsum.photos/800/180/?random=2" class="" alt="...">
            </div>
            <div class="carousel-item">
                <img src="https://picsum.photos/800/180/?random=3" class="" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#event-slides" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#event-slides" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</section>
<!-- categories -->
<section id="categories-section">
    <div id="categories" class="width">
        <a href="">依興趣找活動</a>
        <a href=""><i class="fa-solid fa-person-chalkboard"></i>學習</a>
        <a href=""><i class="fa-solid fa-hands-clapping"></i>演出</a>
        <a href=""><i class="fa-solid fa-landmark"></i>展覽</a>
        <a href=""><i class="fa-solid fa-star-half-stroke"></i>聯誼</a>
        <a href=""><i class="fa-solid fa-utensils"></i>美食</a>
        <a href=""><i class="fa-solid fa-shoe-prints"></i>戶外</a>
        <a asp-controller="Events" asp-action="Index">更多分類 >></a>
    </div>
</section>
<!-- annoucement -->
<section>
    <div id="annoucement" class="width">
        <ul>
            <li><i class="fa-solid fa-circle-exclamation"></i><a href="">活動異動公告一覽表</a></li>
        </ul>
    </div>
</section>
<!-- cards -->
<section>
    <div class="cards-wrap width">
        <h2>讓精彩活動豐富你的每日行事曆</h2>
        <div id="" class="cards-type-tags d-flex">
            <a href="" class="cards-type-tags-active">焦點活動</a>
            <a href="">精選活動</a>
            <a href="">特色活動</a>
        </div>
        <div class="cards">
            @foreach(var card in Model)
            {
                @await Html.PartialAsync("~/PartialViews/_EventCards_Partial.cshtml", card);
            }
        </div>
    </div>
</section>
<!-- promote cards -->
<section>
    <div class="cards-wrap width d-flex flex-column">
        <div class="h3-wrap">
            <h3>香港精選活動</h3>
        </div>
        <div id="" class="cards-type-tags d-flex">
            <a href="" class="cards-type-tags-active">焦點活動</a>
            <a href="">精選活動</a>
            <a href="">特色活動</a>
        </div>
        <div class="cards">
            @foreach (var card in Model)
            {
                @await Html.PartialAsync("~/PartialViews/_EventCards_Partial.cshtml", card);
            }
        </div>
    </div>
</section>
<!-- more events button -->
<section class="d-flex flex-column">
    <a asp-controller="Events" asp-action="Index" id="more-events-button">探索更多活動<span>>></span></a>
</section>
<!-- event place -->
<section id="event-place-section">
    <div class="width">
        <h3>合作場館</h3>
        <div id="event-places" class="d-grid">
            <a asp-controller="Organizations" asp-action="Index"><img
                    src="https://res.cloudinary.com/do2tfk5nk/image/upload/v1708967314/comedyclub_fpyevs.png"
                    alt="">卡米地</a>
            <a href=""><img src="https://res.cloudinary.com/do2tfk5nk/image/upload/v1708967313/thewall_qqhyjy.png"
                    alt="">The Wall</a>
            <a href=""><img src="https://res.cloudinary.com/do2tfk5nk/image/upload/v1708967313/kafka_i16juc.png"
                    alt="">海邊的卡夫卡</a>
            <a href=""><img src="https://res.cloudinary.com/do2tfk5nk/image/upload/v1708967313/theuumouth_l2cbfk.png"
                    alt="">樂悠悠之口</a>
        </div>
    </div>
</section>